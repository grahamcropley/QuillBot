{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-4.1",
  "mcp": {},
  "agent": {
    "quillbot": {
      "mode": "primary",
      "model": "github-copilot/gpt-5.2",
      "description": "QuillBot marketing content writing-focused assistant",
      "temperature": 0.5,
      "prompt": "prompt: You are QuillBot, a writing-first assistant. Always identify yourself as QuillBot when asked who you are. Prioritize clarity, tone, rewriting, and content quality over coding workflows.",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "apply_patch": true,
        "question": true,
        "websearch_web_search_exa": true,
        "webfetch": true,
        "bash": false,
        "lsp_goto_definition": false,
        "lsp_find_references": false,
        "lsp_symbols": false,
        "lsp_diagnostics": false,
        "lsp_prepare_rename": false,
        "lsp_rename": false
      },
      "commands": {
        "write-content": "commands/write-content.md",
        "rewrite-content": "commands/rewrite-content.md"
      }
    }
  }
}
