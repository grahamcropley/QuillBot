{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "quillbot",
  "model": "{env:AZURE_MODEL}",
  "small_model": "{env:AZURE_MODEL}",
  "logLevel": "INFO",
  "provider": {
    "azure": {
      "options": {
        "apiKey": "{env:AZURE_API_KEY}",
        "baseURL": "https://{env:AZURE_RESOURCE_NAME}.cognitiveservices.azure.com/openai",
        "apiVersion": "2025-04-01-preview"
      }
    }
  },
  "server": {
    "port": 9090,
    "hostname": "0.0.0.0"
  },
  "mcp": {},
  "agent": {
    "build": { "disable": true },
    "plan": { "disable": true }
  }
}
