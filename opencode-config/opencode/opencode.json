{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "quillbot",
  "model": "{env:AZURE_MODEL}",
  "small_model": "{env:AZURE_MODEL}",
  "logLevel": "INFO",
  "provider": {
    "azure": {
      "options": {
        "apiKey": "{env:AZURE_API_KEY}",
      },
      "models": {
        "gpt-5.2-chat": {
          "options": {
            "useCompletionUrls": true
          }
        }
      }
    }
  },
  "server": {
    "port": 9090,
    "hostname": "0.0.0.0"
  },
  "mcp": {},
  "agent": {
    "title": { "disable": true },
    "build": { "disable": true },
    "plan": { "disable": true }
  }
}
