# Next.js Web Server - Production Environment (Azure Container Apps)

# OpenCode API connection (container-to-container)
OPENCODE_API_URL=http://quillbot-opencode:9090

# HTTP Basic Auth credentials (must match OpenCode server credentials)
OPENCODE_SERVER_USERNAME=
OPENCODE_SERVER_PASSWORD=

# Azure OpenAI credentials (for client-side operations if needed)
AZURE_RESOURCE_NAME=
AZURE_API_KEY=

# Production-specific paths (Azure Container Apps managed volumes)
DATA_PATH=/app/data

# Container hostname/domain for production
WEB_HOSTNAME=quillbot-web
WEB_DOMAINNAME=

# Easy Auth (Azure handles authentication, no dev user needed)
EASY_AUTH_DEV_USER=

# nginx-proxy integration (not used in production)
VIRTUAL_HOST=
VIRTUAL_PORT=
LETSENCRYPT_HOST=

# Network (default for Azure Container Apps)
NETWORK_NAME=default
